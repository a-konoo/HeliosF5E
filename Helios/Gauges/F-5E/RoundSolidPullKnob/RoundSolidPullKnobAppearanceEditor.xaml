<HeliosSdk:HeliosPropertyEditor x:Class="GadrocsWorkshop.Helios.Controls.RoundSolidPullKnobAppearanceEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d"                                 
    xmlns:Helios="clr-namespace:GadrocsWorkshop.Helios"                      
    xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"                      
    xmlns:local="clr-namespace:GadrocsWorkshop.Helios.Controls"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Height="Auto" 
    d:DesignWidth="180">
    <HeliosSdk:HeliosPropertyEditor.Resources>
    </HeliosSdk:HeliosPropertyEditor.Resources>
    <Grid Background="Transparent" Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="57" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="4,10,2,2" Style="{StaticResource Heading2}">Knob Images</TextBlock>
        <Label Grid.Row="1" FontSize="10" HorizontalAlignment="Left" Content="Normal" Margin="8,3,0,3" Width="42">
            <Label.ToolTip>Image which will be displayed when the knob is not pulled.</Label.ToolTip>
        </Label>
        <HeliosSdk:ImagePicker Grid.Column="1" Grid.Row="1" Height="24" ImageFilename="{Binding Control.KnobImage, Mode=TwoWay}" Margin="0,3,0,3" />
        <Label Grid.Row="2" FontSize="10" HorizontalAlignment="Left" Content="Pulled" Margin="10,3,0,3" Width="36">
            <Label.ToolTip>Image which will be displayed when the knob is pulled.</Label.ToolTip>
        </Label>
        <HeliosSdk:ImagePicker Grid.Column="1" Grid.Row="2" Height="24" ImageFilename="{Binding Control.KnobImagePulled, Mode=TwoWay}" Margin="0,3,0,3" />

        <Label FontSize="10" HorizontalAlignment="Left" Content="Pullable" Margin="4,3,0,5" Width="52"
               Padding="0,0,0,0" Grid.Row="3" Grid.ColumnSpan="4">
            <Label.ToolTip>if true, rotary can be pulled</Label.ToolTip>
        </Label>
        <CheckBox Grid.Row="3" IsChecked="{Binding Control.Pullable}" Margin="50,3,0,5" Grid.Column="0" Grid.ColumnSpan="4">
            <CheckBox.ToolTip>if true, rotary can be pulled</CheckBox.ToolTip>
        </CheckBox>

        <Label FontSize="10" HorizontalAlignment="Left" Content="SendPullValue" Margin="70,3,0,5" Width="80"
               Padding="0,0,0,0" Grid.Row="3" Grid.ColumnSpan="4">
            <Label.ToolTip>When checked, send value of pulled state with rotary moving</Label.ToolTip>
        </Label>
        <CheckBox Grid.Row="3" IsChecked="{Binding Control.IsSendPullValueFlag}" Margin="140,3,0,5" Grid.Column="0" Grid.ColumnSpan="4">
            <CheckBox.ToolTip>When checked, send value of pulled state with rotary moving</CheckBox.ToolTip>
        </CheckBox>


        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Margin="4,10,2,2" Style="{StaticResource Heading2}">Front Images</TextBlock>
        <Label Grid.Row="8" FontSize="10" HorizontalAlignment="Left" Content="image" Margin="8,3,0,3" Width="42">
            <Label.ToolTip>Image which will be displayed when the head is not pulled.</Label.ToolTip>
        </Label>
        <HeliosSdk:ImagePicker Grid.Column="1" Grid.Row="8" Height="24" ImageFilename="{Binding Control.FrontImage, Mode=TwoWay}" Margin="0,3,0,3" />

        <Label Grid.Row="9" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center"  Content="position" MinHeight="24" Width="77" Margin="8,0,0,0">
            <Label.ToolTip>Amount of space on the right edge where text will not be rendered. Hold shift to move individually.</Label.ToolTip>
        </Label>
        <HeliosSdk:HeliosTextBox  Grid.Row="9" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.FrontLeft, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1" />
        <HeliosSdk:HeliosTextBox  Grid.Row="9" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.FrontTop, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"/>


        <Label Grid.Row="10" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center"  Content="transfer XY" MinHeight="24" Width="90" Grid.ColumnSpan="2" Margin="9,0,0,0">
            <Label.ToolTip>if knob is pullable and pulled, knob's top image will move distance(xy)</Label.ToolTip>
        </Label>
        <HeliosSdk:HeliosTextBox  Grid.Row="10" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.PullDistanceX, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1" />
        <HeliosSdk:HeliosTextBox  Grid.Row="10" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.PullDistanceY, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"/>

        <Label Grid.Row="11" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center"  Content="AdjustCenter XY" MinHeight="24" Width="90" Grid.ColumnSpan="2" Margin="2,0,0,0">
            <Label.ToolTip>if knob is pullable and pulled, these xy values fix error of center position of top image for rotation</Label.ToolTip>
        </Label>
        <HeliosSdk:HeliosTextBox  Grid.Row="11" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.AdjustCenterX, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1" />
        <HeliosSdk:HeliosTextBox  Grid.Row="11" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.AdjustCenterY, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"/>


        <TextBlock Grid.Row="12"  Margin="3,5,3,7" TextWrapping="Wrap" Grid.ColumnSpan="2"  Style="{StaticResource Heading2}">Basement(not essential)</TextBlock>

        <Label FontSize="10" HorizontalAlignment="Left" Content="UseBasement" Margin="4,3,0,5" Width="90"
               Padding="0,0,0,0" Grid.Row="13" Grid.ColumnSpan="4">
            <Label.ToolTip>if true, rotary can be pulled</Label.ToolTip>
        </Label>
        <CheckBox Grid.Row="13" IsChecked="{Binding Control.IsBasementFlag}" Margin="70,3,0,5" Grid.Column="0" Grid.ColumnSpan="4">
            <CheckBox.ToolTip>if true, it will show image of basement</CheckBox.ToolTip>
        </CheckBox>

        <Label Grid.Row="14" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"  Content="image" MinHeight="24" Width="56">
            <Label.ToolTip>Image will be used to display the knob basement for this rotary switch.</Label.ToolTip>
        </Label>
        <HeliosSdk:ImagePicker Height="24" Grid.Column="1" Grid.Row="14" ImageFilename="{Binding Control.BackRoundKnobImage, Mode=TwoWay}" Margin="3,1,-3,3" />

        <Label Grid.Row="15" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"  Content="position" MinHeight="24" Width="56">
            <Label.ToolTip>center position of basement Image</Label.ToolTip>
        </Label>
        <HeliosSdk:HeliosTextBox  Grid.Row="15" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.BasementLeft, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1" />
        <HeliosSdk:HeliosTextBox  Grid.Row="15" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.BasementTop, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"/>

        <TextBlock Grid.Row="16"  Margin="3,5,3,7" TextWrapping="Wrap" Grid.ColumnSpan="2"  Style="{StaticResource Heading2}">Step(inclease/declease)</TextBlock>
        <HeliosSdk:HeliosTextBox  Grid.Row="17" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.InclDeclStep, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="3,1,0,1"/>

        <TextBlock Grid.Row="18"  Margin="3,5,3,7" TextWrapping="Wrap" Grid.ColumnSpan="2"  Style="{StaticResource Heading2}">SmoothKnob(wait time(ms))</TextBlock>
        <Label FontSize="10" HorizontalAlignment="Left" Content="is smooth" Margin="4,5,0,5" Width="90"
               Padding="0,0,0,0" Grid.Row="19" Grid.ColumnSpan="4">
            <Label.ToolTip>if false, knob rounding wait for time after last change</Label.ToolTip>
        </Label>
        <CheckBox Grid.Row="19" IsChecked="{Binding Control.IsSmoothKnob}" Margin="50,6,0,5" Grid.Column="0" Grid.ColumnSpan="4">
            <CheckBox.ToolTip>if false, knob rounding wait for time after last change</CheckBox.ToolTip>
        </CheckBox>
        <HeliosSdk:HeliosTextBox  Grid.Row="19" Grid.Column="1"  Height="24" FontSize="10" Text="{Binding Control.WaitMillisecond, Mode=TwoWay}"  MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="3,1,0,1"/>

    </Grid>
</HeliosSdk:HeliosPropertyEditor>
