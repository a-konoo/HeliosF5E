<HeliosSdk:HeliosPropertyEditor x:Class="GadrocsWorkshop.Helios.Controls.GradationDragPanelClippingGeometryBehaviorEditor"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            mc:Ignorable="d"
            xmlns:Helios="clr-namespace:GadrocsWorkshop.Helios"
            xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"    
            xmlns:HeliosBase="clr-namespace:GadrocsWorkshop.Helios.Controls"
            DataContext="{Binding RelativeSource={RelativeSource Self}}"                    
      d:DesignWidth="180">
    <HeliosSdk:HeliosPropertyEditor.Resources>                   
        <Helios:EnumConverter Type="{x:Type HeliosBase:GeometryPatternType}" x:Key="GeometryPatternType" />
        <Style x:Key="RectHeightStyle" TargetType="HeliosSdk:HeliosTextBox">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=GeometryType}" Value="rectangle">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <DataTemplate x:Key="CollectionLayout" DataType="{x:Type HeliosBase:GradationDragPanelClippingGeometry}">
            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" FontSize="10" HorizontalAlignment="Left" Content="Geometry Index">
                        <Label.ToolTip>index</Label.ToolTip>
                    </Label>
                    <Label Grid.Column="1" Grid.Row="0" FontSize="10" Margin="2"  Padding="2,4,2,2" Content="{Binding Index}" Tag="{Binding}" />

                    <Button Grid.Column="1" VerticalAlignment="Bottom"  Grid.Row="0"  Padding="2,0,2,2" HorizontalAlignment="Left" Width="50" Margin="20,1,0,1" GotFocus="Item_GotFocus"   FontSize="10" Click="Delete_Item_Click" Tag="{Binding}">DEL</Button>
                    <Button Grid.Column="1" VerticalAlignment="Bottom"  Grid.Row="0"  Padding="2,0,2,2" HorizontalAlignment="Left"  Width="50" FontSize="10" Margin="75,1,0,1" Click="Create_Geometry_Click" Tag="{Binding}">CREATE</Button>

                    <Label Grid.Column="0" Grid.Row="1" FontSize="10" HorizontalAlignment="Right" Content="BeginCoordinates">
                        <Label.ToolTip>begin point of this feature</Label.ToolTip>
                    </Label>
                    <HeliosSdk:HeliosTextBox  Grid.Row="1" Grid.Column="1"  FontSize="10" Text="{Binding X, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="3,1,0,1"  GotFocus="Item_GotFocus"/>
                    <HeliosSdk:HeliosTextBox  Grid.Row="1" Grid.Column="1"  FontSize="10" Text="{Binding Y, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"  GotFocus="Item_GotFocus"/>

                    <Label Grid.Column="0" Grid.Row="2" FontSize="10" HorizontalAlignment="Right" Content="GeometryType">
                        <Label.ToolTip>point of motion vertex of line</Label.ToolTip>
                    </Label>

                    <ComboBox Grid.Column="1" Grid.Row="2" Margin="4,2,0,2" Width="100" ItemsSource="{Binding Source={StaticResource GeometryPatternType}, Path=DisplayNames}" SelectedItem="{Binding Path=GeometryType, Converter={StaticResource GeometryPatternType}}" HorizontalAlignment="Left" Grid.ColumnSpan="3" />
                    
                    <Label Grid.Column="0" Grid.Row="3" FontSize="10" HorizontalAlignment="Right" Content="Radius(Width)/Height">
                        <Label.ToolTip>set radius for circle,edge length for other polygon</Label.ToolTip>
                    </Label>

                    <HeliosSdk:HeliosTextBox  Grid.Row="3" Grid.Column="1" FontSize="10" Text="{Binding Radius, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="4,1,0,1"  GotFocus="Item_GotFocus"/>
                    <HeliosSdk:HeliosTextBox  Grid.Row="3" Grid.Column="1" FontSize="10" Text="{Binding RectHeight, Mode=TwoWay}" Style="{StaticResource RectHeightStyle}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="65,1,0,1"  GotFocus="Item_GotFocus"/>

                    <Label Grid.Column="1" Grid.Row="4" FontSize="10" Margin="2"  Padding="2,4,2,2" Content="{Binding GeomText}" Tag="{Binding}" />
                </Grid>
            </Border>
        </DataTemplate>
    </HeliosSdk:HeliosPropertyEditor.Resources>
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="80"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Margin="4,10,2,2" Style="{StaticResource Heading2}">Geometry</TextBlock>
            <Button VerticalAlignment="Bottom" Margin="4,2,2,2" Padding="2,0,2,2" FontSize="10" Click="Add_Item_Click">Add</Button>
        </StackPanel>

        <ListBox Grid.Column="0" Grid.Row="1" Background="Transparent" Grid.ColumnSpan="2" Name="Collections" Margin="10,2,2,2" BorderThickness="0" HorizontalContentAlignment="Stretch" ItemsSource="{Binding Control.GeometryCollections}" ItemTemplate="{StaticResource CollectionLayout}">
            <ListBox.CommandBindings>
                <CommandBinding Command="ApplicationCommands.Delete" CanExecute="DeleteItem_CanExecute" Executed="DeleteItem_Executed" />
            </ListBox.CommandBindings>
        </ListBox>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3"  Margin="4,10,2,2" Style="{StaticResource Heading2}">Defaults</TextBlock>
        <Label Grid.Column="0" Grid.Row="4" FontSize="10" HorizontalAlignment="Right" Content="Position">
            <Label.ToolTip>Default position which will be set on profile start up or reset.</Label.ToolTip>
        </Label>
    </Grid>
</HeliosSdk:HeliosPropertyEditor>
