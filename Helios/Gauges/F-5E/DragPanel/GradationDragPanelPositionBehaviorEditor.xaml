<HeliosSdk:HeliosPropertyEditor x:Class="GadrocsWorkshop.Helios.Controls.GradationDragPanelPositionBehaviorEditor"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            mc:Ignorable="d"
            xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"    
            xmlns:HeliosBase="clr-namespace:GadrocsWorkshop.Helios.Controls"
            DataContext="{Binding RelativeSource={RelativeSource Self}}"                    
      d:DesignWidth="180">
    <HeliosSdk:HeliosPropertyEditor.Resources>
        <DataTemplate x:Key="PositionLayout" DataType="{x:Type HeliosBase:GradationDragPanelPosition}">
            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" FontSize="10" HorizontalAlignment="Left" Content="Geometry Index">
                        <Label.ToolTip>index</Label.ToolTip>
                    </Label>
                    <Label Grid.Column="1" Grid.Row="0" FontSize="10" Margin="2"  Padding="2,4,2,2" Content="{Binding Index}" Tag="{Binding}" />
                    <Button Grid.Column="2" Grid.Row="0" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center" Tag="{Binding}" Template="{StaticResource DeleteButton}" Click="Delete_Item_Click">
                        <Button.ToolTip>Remove this position.</Button.ToolTip>
                    </Button>
                    <Label Grid.Column="0" Grid.Row="1" FontSize="10" HorizontalAlignment="Right" Content="BeginCoordinates">
                        <Label.ToolTip>begin point of this feature</Label.ToolTip>
                    </Label>
                    <HeliosSdk:HeliosTextBox  Grid.Row="1" Grid.Column="1"  FontSize="10" Text="{Binding X, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1"  GotFocus="Item_GotFocus"/>
                    <HeliosSdk:HeliosTextBox  Grid.Row="1" Grid.Column="1"  FontSize="10" Text="{Binding Y, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"  GotFocus="Item_GotFocus"/>
                </Grid>
            </Border>
        </DataTemplate>
    </HeliosSdk:HeliosPropertyEditor.Resources>
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="80"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Margin="4,10,2,2" Style="{StaticResource Heading2}">Position</TextBlock>
            <Button VerticalAlignment="Bottom" Margin="4,2,2,2" Padding="2,0,2,2" FontSize="10" Click="Add_Item_Click">Add</Button>
        </StackPanel>

        <ListBox Grid.Column="0" Grid.Row="1" Background="Transparent" Grid.ColumnSpan="2" Name="Positions" Margin="10,2,2,2" BorderThickness="0" HorizontalContentAlignment="Stretch" ItemsSource="{Binding Control.PositionCollections}" ItemTemplate="{StaticResource PositionLayout}">
            <ListBox.CommandBindings>
                <CommandBinding Command="ApplicationCommands.Delete" CanExecute="DeleteItem_CanExecute" Executed="DeleteItem_Executed" />
            </ListBox.CommandBindings>
        </ListBox>
    </Grid>
</HeliosSdk:HeliosPropertyEditor>
