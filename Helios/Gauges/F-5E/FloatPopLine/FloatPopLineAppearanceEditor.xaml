<HeliosSdk:HeliosPropertyEditor x:Class="GadrocsWorkshop.Helios.Controls.FloatPopLineAppearanceEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"                      
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Height="240" d:DesignWidth="200">
    <HeliosSdk:HeliosPropertyEditor.Resources>
        <Style x:Key="LineColorWellStyle" TargetType="{x:Type HeliosSdk:ColorWell}">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLines}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LineTextBoxStyle" TargetType="{x:Type HeliosSdk:HeliosTextBox}">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLines}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LineSliderStyle" TargetType="Slider">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLines}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LabelLabelStyle" TargetType="Label">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLabels}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LabelColorWellStyle" TargetType="{x:Type HeliosSdk:ColorWell}">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLabels}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LabelFormatStyle" TargetType="{x:Type HeliosSdk:TextFormatButton}">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLabels}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LabelTextBoxStyle" TargetType="{x:Type HeliosSdk:HeliosTextBox}">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLabels}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LabelSliderStyle" TargetType="Slider">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Control.DrawLabels}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </HeliosSdk:HeliosPropertyEditor.Resources>
    <Grid Background="Transparent" Margin="6,26,4,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="58" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" MinHeight="28"/>
            <RowDefinition Height="28" MinHeight="28"/>
            <RowDefinition Height="25" MinHeight="25"/>
            <RowDefinition Height="25" MinHeight="25"/>
            <RowDefinition Height="25" MinHeight="25"/>
            <RowDefinition Height="28" MinHeight="28"/>
            <RowDefinition Height="28" MinHeight="28"/>
            <RowDefinition Height="28" MinHeight="28"/>
            <RowDefinition Height="28" MinHeight="28"/>
            <RowDefinition Height="28" MinHeight="28"/>
            <RowDefinition Height="25" MinHeight="25"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Margin="1,10,5,2" Style="{StaticResource Heading2}">PopUpLine</TextBlock>

        <Label Grid.Row="1" FontSize="10" HorizontalAlignment="Center" Content="Position 1st" Margin="0,6,0,6" Padding="0,0,0,0" Width="56">
            <Label.ToolTip>1st vertex coord of line</Label.ToolTip>
        </Label>

        <HeliosSdk:HeliosTextBox  Grid.Row="1" Grid.Column="1"  FontSize="10" Text="{Binding Control.FirstX, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1" />
        <HeliosSdk:HeliosTextBox  Grid.Row="1" Grid.Column="1"  FontSize="10" Text="{Binding Control.FirstY, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"/>

        <Label Grid.Row="2" FontSize="10" HorizontalAlignment="Center" Content="Position 2nd" Margin="0,6,0,6" Padding="0,0,0,0" Width="56">
            <Label.ToolTip>2nd vertex coord of line</Label.ToolTip>
        </Label>

        <HeliosSdk:HeliosTextBox  Grid.Row="2" Grid.Column="1"  FontSize="10" Text="{Binding Control.SecondX, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1" />
        <HeliosSdk:HeliosTextBox  Grid.Row="2" Grid.Column="1"  FontSize="10" Text="{Binding Control.SecondY, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"/>


        <Label Grid.Row="3" FontSize="10" HorizontalAlignment="Center" Content="Position 3rd" Margin="0,6,0,6" Padding="0,0,0,0" Width="56">
            <Label.ToolTip>3rd vertex coord of line</Label.ToolTip>
        </Label>

        <HeliosSdk:HeliosTextBox  Grid.Row="3" Grid.Column="1"  FontSize="10" Text="{Binding Control.ThirdX, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1" />
        <HeliosSdk:HeliosTextBox  Grid.Row="3" Grid.Column="1"  FontSize="10" Text="{Binding Control.ThirdY, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"/>

        <Label Grid.Row="4" FontSize="10" HorizontalAlignment="Center" Content="Circle Radius" Margin="0,6,0,6" Padding="0,0,0,0" Width="56">
            <Label.ToolTip>circle symbol radius of end line</Label.ToolTip>
        </Label>

        <HeliosSdk:HeliosTextBox  Grid.Row="4" Grid.Column="1"  FontSize="10" Text="{Binding Control.Radius, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1" />

        <TextBlock Grid.Column="0"  Grid.Row="5" Margin="0,6,7,4" Padding="0,0,0,0" Style="{StaticResource Heading2}">LineStyle</TextBlock>

        <TextBlock  Grid.Row="6" FontSize="10" Margin="6,0,1,0" Style="{StaticResource Heading2}" Height="20" VerticalAlignment="Center"><Run Text="Color"/></TextBlock>
        <HeliosSdk:ColorWell Grid.Column="1" Grid.Row="6" Color="{Binding Control.LineColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"
            Padding="0,0,0,0" Margin="3,1,0,3" MinWidth="20" Height="20" MinHeight="24" Width="40" />

        <TextBlock  Grid.Row="7" FontSize="10" Margin="6,0,13,0" Style="{StaticResource Heading2}" Height="13" VerticalAlignment="Center"><Run Text="Thickness"/></TextBlock>
        <HeliosSdk:HeliosTextBox  Grid.Column="1" Grid.Row="7" FontSize="10" Text="{Binding Control.LineThickness}" 
            Padding="0,0,0,0" Margin="3,0,0,0" HorizontalAlignment="Left"  MinWidth="50"  Width="49"
            MinHeight="24" Height="16" VerticalAlignment="Center" />

    </Grid>
</HeliosSdk:HeliosPropertyEditor>
