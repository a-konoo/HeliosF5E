<HeliosSdk:HeliosPropertyEditor x:Class="GadrocsWorkshop.Helios.Controls.FlipLeverBehaviorEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"
             xmlns:HeliosBase="clr-namespace:GadrocsWorkshop.Helios.Controls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
                                
      d:DesignWidth="180">
    <HeliosSdk:HeliosPropertyEditor.Resources>
        <DataTemplate x:Key="PositionLayout" DataType="{x:Type HeliosBase:FlipLeverPosition}">
            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" FontSize="10" HorizontalAlignment="Left" Content="Position Index">
                        <Label.ToolTip>index</Label.ToolTip>
                    </Label>
                    <Label Grid.Column="1" Grid.Row="0" FontSize="10" Margin="2"  Padding="2,4,2,2" Content="{Binding Index}" Tag="{Binding}" />

                    <Button Grid.Column="2" Grid.Row="0" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center" Tag="{Binding}" Template="{StaticResource DeleteButton}" Click="Delete_Position_Click">
                        <Button.ToolTip>Remove this position.</Button.ToolTip>
                    </Button>
                    <Label Grid.Column="0" Grid.Row="1" FontSize="10" HorizontalAlignment="Right" Content="Start/End Frame">
                        <Label.ToolTip>Start/End Frame</Label.ToolTip>
                    </Label>
                    <HeliosSdk:HeliosTextBox  Grid.Row="1" Grid.Column="1"  FontSize="10" Text="{Binding StartFrame, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1"  GotFocus="Position_GotFocus"/>
                    <HeliosSdk:HeliosTextBox  Grid.Row="1" Grid.Column="1"  FontSize="10" Text="{Binding EndFrame, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="55,1,0,1"  GotFocus="Position_GotFocus"/>

                    <Label Grid.Column="0" Grid.Row="2" FontSize="10" HorizontalAlignment="Right" Content="FrameSpan">
                        <Label.ToolTip>span of each frames on this position</Label.ToolTip>
                    </Label>
                    <HeliosSdk:HeliosTextBox  Grid.Row="2" Grid.Column="1"  FontSize="10" Text="{Binding FrameSpan, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1"  GotFocus="Position_GotFocus" />
                    <Label Grid.Column="0" Grid.Row="3" FontSize="10" HorizontalAlignment="Right" Content="SendValue">
                        <Label.ToolTip>sendvalue on this position</Label.ToolTip>
                    </Label>
                    <HeliosSdk:HeliosTextBox  Grid.Row="3" Grid.Column="1"  FontSize="10" Text="{Binding SendValue, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1"  GotFocus="Position_GotFocus" />

                    <Label Grid.Column="0" Grid.Row="4" FontSize="10" HorizontalAlignment="Right" Content="DragAngle">
                        <Label.ToolTip>drag angle to next lever position</Label.ToolTip>
                    </Label>
                    <Slider Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Minimum="0" Maximum="360" Value="{Binding DragAngle}" Margin="2" Tag="{Binding}" GotFocus="Position_GotFocus" />

                    <Label Grid.Column="0" Grid.Row="5" FontSize="10" HorizontalAlignment="Right" Content="DragDistance">
                        <Label.ToolTip>drag distance to next lever position.</Label.ToolTip>
                    </Label>
                    <HeliosSdk:HeliosTextBox  Grid.Row="5" Grid.Column="1"  FontSize="10" Text="{Binding DragDistance, Mode=TwoWay}" MinHeight="18" HorizontalAlignment="Left" Width="50" Margin="2,1,0,1"  GotFocus="Position_GotFocus" />

                </Grid>
            </Border>
        </DataTemplate>
    </HeliosSdk:HeliosPropertyEditor.Resources>
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="80"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Margin="4,10,2,2" Style="{StaticResource Heading2}">Positions</TextBlock>
            <Button VerticalAlignment="Bottom" Margin="4,2,2,2" Padding="2,0,2,2" FontSize="10" Click="Add_Position_Click">Add Last</Button>
            <Button VerticalAlignment="Bottom" Margin="4,2,2,2" Padding="2,0,2,2" FontSize="10" Click="Delete_Position_Click">Del Last</Button>
        </StackPanel>

        <ListBox Grid.Column="0" Grid.Row="1" Background="Transparent" Grid.ColumnSpan="2" Name="PositionList" Margin="10,2,2,2" BorderThickness="0" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.IsDeferredScrollingEnabled="False" ItemsSource="{Binding Control.Positions}" ItemTemplate="{StaticResource PositionLayout}" SelectionChanged="SelectionChanged">
            <ListBox.CommandBindings>
                <CommandBinding Command="ApplicationCommands.Delete" CanExecute="DeletePosition_CanExecute"  />
            </ListBox.CommandBindings>
        </ListBox>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3"  Margin="4,10,2,2" Style="{StaticResource Heading2}">Defaults</TextBlock>
        <Label Grid.Column="0" Grid.Row="4" FontSize="10" HorizontalAlignment="Right" Content="Position">
            <Label.ToolTip>Default position which will be set on profile start up or reset.</Label.ToolTip>
        </Label>
        <ComboBox Name="DefaultPositionCombo" Grid.Column="1" Grid.Row="4" FontSize="10" Margin="0,2,0,2" HorizontalAlignment="Left" ItemsSource="{Binding Control.Positions}" DisplayMemberPath="Index" SelectionChanged="ComboBox_SelectionChanged" />
    </Grid>
</HeliosSdk:HeliosPropertyEditor>
