             xmlns:helios="clr-namespace:GadrocsWorkshop.Helios"
             xmlns:controls="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
