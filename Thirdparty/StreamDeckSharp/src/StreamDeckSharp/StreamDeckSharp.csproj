<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472</TargetFrameworks>
    <Company>OpenMacroBoard</Company>
    <Version>0.0.0-helios</Version>
    <Description>A simple .NET wrapper for StreamDeck (using OpenMacroBoard.SDK)</Description>
    <Copyright>OpenMacroBoard 2018 - 2021</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIconUrl>https://raw.githubusercontent.com/HeliosVirtualCockpit/StreamDeckSharp/master/doc/icon64.png</PackageIconUrl>
    <PackageProjectUrl>https://openmacroboard.github.io/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/HeliosVirtualCockpit/StreamDeckSharp</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>streamdeck elgato stream deck open macro board openmacroboard streamdeckmini streamdeckxl mini xl</PackageTags>
    <Authors>Christian Wischenbart</Authors>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <DocumentationFile>bin\StreamDeckSharp.xml</DocumentationFile>
    <SignAssembly>false</SignAssembly>
    <AssemblyOriginatorKeyFile>StreamDeckSharp.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="4.6.1" />
    <ProjectReference Include="..\..\..\OpenMacroBoard.SDK\src\OpenMacroBoard.SDK\OpenMacroBoard.SDK.csproj" />
    <PackageReference Include="HidSharp" Version="2.1.0" />
  </ItemGroup>

</Project>
